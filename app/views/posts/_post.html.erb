<div class = "container border rounded mt-2 bg-light ">

      <div class ="row mb-0 ">
        <h2 class="col-auto mr-auto  mb-0  h-25%"><%= link_to post.title,  post_path(post) %></h2>
        <p class ="col-autotext-right mr-3 mt-2">@<%= post.author%> </p>
        <p class =" col-autotext-right mr-3 mt-2"><%= post.created_at.to_date%> </p>
      </div>
          <p class="mt-0">
    <%=raw post.tags.map(&:name).map{ |t| link_to t, tag_path(t), class: 'tag tag-red' }.join(' ') %>
    </p>
<p><%=  post.summary%></p>
</div>
